<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        {{#each tagsq}}
        <a class="nav-link" href="/tag/{{this._id}}">{{this.name}}</a>
        {{/each}}
      </div>
    </div>
  </div>
</nav>

<div class="row row-cols-1 row-cols-md-3 g-4" id="allCards">

  {{#if resMentors}}
  {{#each resMentors}}
  <div class="col">
    <div class="card" data-id={{this._id}}>
      <img src={{this.image}} width="100" height="300" class="card-img-top" alt="None">
      <div class="card-body">
        <div class="btn-group" role="group" aria-label="Basic outlined example">
        </div>
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.occupation}}</p>
      </div>
    </div>
  </div>
  {{/each}}
  {{else}}
  <p class="card-text">Менторов пока нет :(</p>
  {{/if}}

</div>
